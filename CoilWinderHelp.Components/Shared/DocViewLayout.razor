@inherits LayoutComponentBase
@layout MainLayout

<MudLayout>
<MudAppBar
      Elevation="3"
      Dense="true"
      Fixed="false">
    <MudIconButton
        Color="Color.Inherit"
        Edge="Edge.Start"
        Icon="@Icons.Material.Filled.Menu"
        OnClick="@(_ => DrawerToggle())" />
    <MudSpacer />
    <AppbarButtons/>
  </MudAppBar>
  <MudDrawer
      class="doc-view-drawer"
      @bind-Open="@_open"
      Anchor="Anchor.Start"
      Elevation="1"
      Variant="DrawerVariant.Responsive">
    <MudDrawerHeader Class="align-center" Dense="true">
      <MudText Typo="Typo.h6" GutterBottom="false">My App</MudText>
    </MudDrawerHeader>
    <MudDivider />
    <MudNavMenu Class="directory-nav" Dense="true">
      <MudNavLink Match="NavLinkMatch.All">Store</MudNavLink>
      <MudNavLink Match="NavLinkMatch.All">Library</MudNavLink>
      <MudNavLink Match="NavLinkMatch.All">Community</MudNavLink>
    </MudNavMenu>
    <MudSpacer/>
    <MudNavMenu Class="app-nav" Dense="true" Rounded="true">
      <MudNavLink Match="NavLinkMatch.All">Store</MudNavLink>
      <MudNavLink Match="NavLinkMatch.All">Library</MudNavLink>
      <MudNavLink Match="NavLinkMatch.All">Community</MudNavLink>
    </MudNavMenu>
  </MudDrawer>
  <MudMainContent Class="dov-view main-content">
    <MudContainer
        Class="container doc-view"
        MaxWidth="MaxWidth.False">
      @Body
    </MudContainer>
  </MudMainContent>
</MudLayout>

@code {
  bool _open;

  protected override async Task OnAfterRenderAsync(bool firstRender) {
    if (firstRender) {
      _open = true;
      await InvokeAsync(StateHasChanged);
    }
  }
  
  void DrawerToggle() {
    _open = !_open;
  }
  }