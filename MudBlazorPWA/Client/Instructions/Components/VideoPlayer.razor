@using MudBlazorPWA.Client.Instructions.Pages
@implements IAsyncDisposable
@inject IJSRuntime JsRuntime
@inject HubClientService DirectoryHub



@if (AutoDocs.VideoUrl != null) {
  <video id="@Id"
      @onloadedmetadata="@JsSetVideoPlayer"
      src="@AutoDocs.VideoUrl"
      autoplay
      preload
      muted
      controls
      style="width: 100%; height: 100%">
    <source src="@AutoDocs.VideoUrl"
        type="video/mp4"/>

  </video>
}

@code {
  // use reflection to gets the NameSpace of this component
  [Parameter]
  public string Id { get; set; } = "video-player";

  [CascadingParameter]
  public AutoDocs AutoDocs { get; set; } = default!;

  private string? _videoUrl;


  private IJSObjectReference? _videoJs;

  protected override async Task OnInitializedAsync() {
    AutoDocs.ReloadSecondaryContent += OnReloadSecondaryContent;
    if (AutoDocs.VideoUrl != null) {
      _videoUrl = AutoDocs.VideoUrl;
    }
    await base.OnInitializedAsync();
  }
  protected override async Task OnAfterRenderAsync(bool firstRender) {
    if (firstRender) {
      _videoJs = await JsRuntime
        .InvokeAsync<IJSObjectReference>(
          "import", "./Instructions/Components/VideoPlayer.razor.js");
    }
    await base.OnAfterRenderAsync(firstRender);
  }
  private async Task JsSetVideoPlayer() {
    if (_videoJs != null)
      await _videoJs.InvokeVoidAsync("init", Id);
  }
  public async ValueTask DisposeAsync() {
    if (_videoJs != null) {
      await _videoJs.DisposeAsync();
    }
  }
  private async void OnReloadSecondaryContent() {
  // reload the video player with the updated video url
    if (_videoJs != null) {
      await _videoJs.InvokeVoidAsync("reload", Id, AutoDocs.VideoUrl);
    }
    StateHasChanged();
  }

}
