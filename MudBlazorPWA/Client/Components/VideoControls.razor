<div role="group" class="controls-group">
<button
    id="btnPlay"
    class="controls btn play-btn"
    type="button"
    @onclick="PlayClick">
  <i class="material-icons">play_circle_outline</i>
</button>

<button
    id="btnPause"
    class="controls btn play-btn"
    type="button"
    @onclick="PauseClick">
    <i class="material-icons">play_circle_outline</i>
</button>

<button
    id="btnRefresh"
    class="controls btn play-btn"
    type="button"
    @onclick="RefreshButtonClick">
    <i class="material-icons">play_circle_outline</i>
</button>

<button
    id="btnRewind"
    class="controls btn play-btn"
    type="button"
    @onclick="SeekBackClick">
    <i class="material-icons">play_circle_outline</i>
</button>

<button
    id="btnForward"
    class="controls btn play-btn"
    type="button"
    @onclick="SeekForwardClick">
    <i class="material-icons">play_circle_outline</i>
</button>
</div>


@code {
  [Parameter]
  public EventCallback PlayClick { get; set; }
  [Parameter]
  public EventCallback PauseClick { get; set; }
  [Parameter]
  public EventCallback RefreshButtonClick { get; set; }
  [Parameter]
  public EventCallback SeekBackClick { get; set; }
  [Parameter]
  public EventCallback SeekForwardClick { get; set; }

  //function for the parent to call that returns the id of every button in the group
  public string[] GetButtonIds()
  {
    return new[] { "btnPlay", "btnPause", "btnRefresh", "btnRewind", "btnForward" };
  }
}