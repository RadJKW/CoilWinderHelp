@inherits LayoutComponentBase
@layout MainLayout

<MudLayout>
  <MudDrawer
    class="doc-view-drawer"
    @bind-Open="@_open"
    Anchor="Anchor.Start"
    Elevation="1"
    Variant="DrawerVariant.Persistent">
    <MudDrawerHeader Class="align-center" Dense="true">
      <MudText Typo="Typo.h6" GutterBottom="false">My App</MudText>
    </MudDrawerHeader>
    <MudDivider/>
    <MudNavMenu>
      <MudNavLink Match="NavLinkMatch.All">Store</MudNavLink>
      <MudNavLink Match="NavLinkMatch.All">Library</MudNavLink>
      <MudNavLink Match="NavLinkMatch.All">Community</MudNavLink>
    </MudNavMenu>
  </MudDrawer>
  <MudMainContent>
    <MudContainer
      Class="container doc-view pa-0"
      MaxWidth="MaxWidth.Large">
      @Body
    </MudContainer>
  </MudMainContent>
</MudLayout>

@code {

  bool _open;

  protected override async Task OnAfterRenderAsync(bool firstRender) {
    if (firstRender) {
      _open = true;
      await InvokeAsync(StateHasChanged);
    }
  }
}