@inherits LayoutComponentBase
@layout MainLayout

<MudLayout>
<MudAppBar
      Elevation="3"
      Dense="true"
      Fixed="false">
  <MudIconButton
      Color="Color.Inherit"
      Edge="Edge.Start"
      Icon="@Icons.Material.Filled.Menu"
      OnClick="@(_ => DrawerToggle())" />
  <MudSpacer/>
   <MudText
          Style="text-wrap: none"
          Typo="Typo.h6">
        @(PageTitle)
      </MudText>
    <MudSpacer />
    <AppbarButtons/>
  </MudAppBar>
  <MudDrawer
      class="doc-view-drawer"
      @bind-Open="@_open"
      Anchor="Anchor.Start"
      Elevation="1"
      Variant="DrawerVariant.Responsive">
    <MudDrawerHeader Class="align-center" Dense="true">
      <MudText Typo="Typo.h6" GutterBottom="false">My App</MudText>
    </MudDrawerHeader>
    <MudDivider />
    <NavMenu/>
    <MudSpacer/>
  </MudDrawer>
  <MudMainContent
      Class="dov-view main-content">
    <MudContainer
        Class="container doc-view"
        MaxWidth="MaxWidth.False">
      <CascadingValue
          Value="this">
        @Body
      </CascadingValue>
    </MudContainer>
  </MudMainContent>
</MudLayout>

@code {
  bool _open;

  private string? _pageTitle;
  public string PageTitle {
    get => _pageTitle ?? "MudBlazorTest";
    set {
      _pageTitle = value;
      InvokeAsync(StateHasChanged);
    }
  }

  protected override async Task OnAfterRenderAsync(bool firstRender) {
    if (firstRender) {
      _open = true;
      await InvokeAsync(StateHasChanged);
    }
  }

  void DrawerToggle() {
    _open = !_open;
  }
  }
