@page "/index"
@layout DocViewLayout
@implements IDisposable
@inject IHttpClientFactory ClientFactory

<PageTitle>Index</PageTitle>

<div class="index-grid">

  <div class="video-content">
    @if (VideoUrl is not null) {
    
      <VideoPlayer
          @ref="_videoPlayer"
          VideoPlayerId="video"
          VideoUrl="@VideoUrl">
      </VideoPlayer>
    }
  </div>

  <div class="video-footer">

  </div>
</div>

@code{

